# This fixes Wi-Fi for some users
if [ ! -f "/data/.cid.info" ] || [ "$(cat /data/.cid.info)" != "murata" ]; then
	printf "murata" > "/data/.cid.info"
	chown system:root "/data/.cid.info"
	chmod 664 "/data/.cid.info"
fi
exit 0
